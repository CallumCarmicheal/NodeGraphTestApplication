<UserControl x:Class="SimpleBlankApplication.UI.GraphEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBlankApplication.UI"
        xmlns:ngv="clr-namespace:NodeGraph.View;assembly=NodeGraph"
        mc:Ignorable="d"
             
        d:DesignHeight="450" d:DesignWidth="800"
             
        Loaded="UserControl_Loaded">
    <!-- This is our flow chart view -->
    <ngv:FlowChartView DataContext="{Binding FlowChartViewModel, UpdateSourceTrigger=PropertyChanged}" />
</UserControl>
